# ============================================================================
# Tridah Framework Template - Environment Configuration
# ============================================================================
# Copy this file to .env and configure your settings
# Run: cp .env.example .env
# Then: php artisan key:generate
# ============================================================================

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------

APP_NAME=Tridah
# Application name - change to your app's name
APP_ENV=local
# Environment: local, staging, production
APP_KEY=
# Application key - run 'php artisan key:generate' to generate
APP_DEBUG=true
# Debug mode: true for development, false for production
APP_URL=http://localhost:8000
# Application URL - change to your domain in production

# ----------------------------------------------------------------------------
# Localization
# ----------------------------------------------------------------------------

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ----------------------------------------------------------------------------
# PHP Configuration
# ----------------------------------------------------------------------------

PHP_CLI_SERVER_WORKERS=4

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------

BCRYPT_ROUNDS=12

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------

# SQLite (Default - no setup required)
DB_CONNECTION=sqlite

# MySQL Configuration (Uncomment to use MySQL)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=your_database_name
# DB_USERNAME=your_database_user
# DB_PASSWORD=your_database_password

# ----------------------------------------------------------------------------
# Session Configuration
# ----------------------------------------------------------------------------

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ----------------------------------------------------------------------------
# Broadcasting & Queues
# ----------------------------------------------------------------------------

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# ----------------------------------------------------------------------------
# Cache Configuration
# ----------------------------------------------------------------------------

CACHE_STORE=database

# ----------------------------------------------------------------------------
# Redis Configuration (Optional)
# ----------------------------------------------------------------------------

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ----------------------------------------------------------------------------
# Mail Configuration
# ----------------------------------------------------------------------------

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME=""

# ----------------------------------------------------------------------------
# AWS Configuration (Optional)
# ----------------------------------------------------------------------------

# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false
